---
import TrackCard from "../components/TrackCard.astro";
import Menu from "../components/Menu.astro";
import Pagination from "../components/Pagination.astro";
import Layout from "../layouts/Layout.astro";
import { getTrackFeed, trackPagination } from "../utils";

const data = await getTrackFeed(
  "https://www.spreaker.com/show/4173756/episodes/feed"
)

const title = "DJ - Matteo Mancino"
const description = "Deep House, Afro House, Tech House"

const pagination = trackPagination(data.tracks);
---

<Layout seo={{ title, description, image: "/matteo.jpg" }}>
  <main>
    <Menu />
    <!-- <ul
      role="list"
      class="max-w-4xl 4xl:max-w-7xl mx-auto w-full p-2 sm:p-4 md:p-8 lg:p-8 pb-10 lg:pb-0 grid 4xl:grid-cols-2 gap-2"
    >
      {data.tracks.slice(0, 20).map((e) => <TrackCard {...e} />)} -->
    </ul>

    <Pagination currentPage={1} pages={pagination.pages} />
  </main>
</Layout>
